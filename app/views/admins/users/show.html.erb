<!-- 管理者用’ユーザー’詳細ページ -->

<div class="container">
  <div class="row">
    <div class="col">
      <!-- ページタイトル -->
      <h2 class="text-center pt-5"><%= @user.name %>'s USER INFO. <i class="fas fa-user-check"></i></h2>
      
      <table class="table table-striped table-dark text-center mt-5 mb-5">
        <tbody>
          <tr>
            <th scope="col">POINT by POINT</th>
            <th scope="row"><i class="fas fa-heartbeat"></i></th>
          </tr>
          <!-- ユーザープロフィール画像 -->
          <tr>
            <th scope="col">Profile Image</th>
            <td>
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image.variant(resize:'200x200') %>
              <% else %>
                <%= image_tag 'no_image.jpg', size:'200x200' %>
              <% end %>
            </td>
          </tr>
          <!-- ユーザーID -->
          <tr>
            <th scope="col">USER ID</th>
            <td><%= @user.id %></td>
          </tr>
          <!-- ユーザーニックネーム -->
          <tr>
            <th scope="col">NICKNAME</th>
            <td><%= @user.name %></td>
          </tr>
          <!-- ユーザー登録メールアドレス -->
          <tr>
            <th scope="col">E-MAIL ADDRESS</th>
            <td><%= @user.email %></td>
          </tr>
          <!-- ユーザー自己紹介 -->
          <tr>
            <th scope="col">INTRODUTION</th>
            <td><%= @user.introduction %></td>
          </tr>
          <!-- ユーザーステータス -->
          <tr>
          <!-- ユーザーステータス -->
          <tr>
            <th scope="col">USER STATUS</th>
            <td> <!-- 退会フラグで条件分岐 -->
              <% if @user.is_deleted == true %>
                <div class="text-secondary"> 退会済 </div>
              <% else %>
                <div class="text-info"> 有効 </div>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <!-- ユーザー情報編集ボタン -->
      <div class="text-center mt-5">
        <%= link_to edit_admins_user_path(@user.id), class: "btn btn-outline-success w-50" do %>
          EDIT THIS USER INFO. <i class="fas fa-user-edit"></i>
        <% end %>
      </div>
      <!-- このユーザーだけの投稿一覧ページへ遷移 -->
      <div class="text-center mt-5 mb-5">
        <%= link_to admins_posts_path(@user.id), class: "btn btn-outline-info w-50" do %>
          THIS USER's ALL POST <i class="far fa-images"></i>
        <% end %>
      </div>

    </div> <!--col-->
  </div> <!--row-->
</div> <!--container-->