<!-- 管理者用'ユーザー'一覧ページ -->
<div class="container">
  <div class="row">
    <div class="col">
      <!-- ページタイトル -->
      <h2 class="text-center pt-5">USER LIST <i class="fas fa-users"></i></h2>

      <table class="table table-hover text-center mt-5">
        <thead class="thead-dark">
          <tr>
            <!-- ユーザID -->
            <th scope="col">USER ID</th>
            <!-- ニックネーム -->
            <th scope="col">NICKNAME</th>
            <!-- メールアドレス -->
            <th scope="col">E-MAIL ADDRESS</th>
            <!-- ユーザーステータス -->
            <th scope="col">USER STATUS</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <!-- ユーザID -->
            <th scope="row"><%= user.id %></th>
            <!-- ニックネーム -->
            <td><%= link_to user.name, admins_user_path(user.id), class: "user_#{user.id} text-light" %></td>
            <!-- メールアドレス -->
            <td><%= user.email %></td>
            <!-- ユーザステータス/ 退会フラグで条件分岐 -->
            <td>
              <% if user.is_deleted == true %>
                <p class="text-dark"> 退会済 </p>
              <% else %>
                <p class="text-light"> 有効 </p>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>

    </div> <!--col-->
  </div> <!--row-->
  <!-- ページネーション -->
  <div class="pagination justify-content-center"><%= paginate @users %></div>
</div> <!--container-->