<!-- エリア一覧・新規追加ページ -->

<div class="container">
  <!-- 新規追加フォーム -->
  <div class="row">
    <div class="col">
      <!-- ページタイトル -->
      <h2 class="text-center pt-5">Which 'area' would you like to add <i class="fas fa-question"></i></h2>

      <%= form_with model: @area, url: admins_areas_path, local: true do |f| %>
      <form>
        <!-- エリアの名前 -->
        <div class="row pt-5 mb-3">
          <%= f.label :area, "AREA：", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :area, placeholder: "エリア名", autofocus: true, autocomplete: "area", class: "form-control w-75" %>
          </div>
        </div>
        <!-- 新規追加ボタン -->
        <div class="text-center mt-2 mb-3">
          <%= f.submit "NEW / ADD", class: "btn btn-outline-dark" %>
        </div>
      </form>
      <% end %>

    </div> <!--col-->
  </div> <!--row-->

  <!-- エリア一覧 -->
  <div class="row mt-3 mb-5">
    <div class="col">
      <!--ページのサブタイトル-->
      <h3 class="text-center pt-5 mb-5">AREA LIST <i class="fas fa-map-marked-alt"></i></h3>

      <table class="table table-hover text-center">
        <thead class="thead-dark">
          <tr>
            <th scope="col">＃</th>
            <th scope="col">AREA</th>
            <th scope="col">EDIT..?</th>
            <th scope="col">DESTROY..?</th>
          </tr>
        </thead>
        <% @areas.each do |area| %>
        <tbody class="table">
          <tr>
            <th scope="row"><%= area.id %></th>
            <td><%= area.area %></td>
            <!-- 編集ボタン -->
            <td>
              <%= link_to edit_admins_area_path(area.id), class: "btn btn-outline-light" do %>
                EDIT <i class="far fa-edit"></i>
              <% end %>
            </td>
            <!-- 削除ボタン -->
            <td>
              <%= link_to admins_area_path(area.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-outline-danger" do %>
                DESTROY <i class="far fa-trash-alt"></i>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div> <!--col-->
  </div> <!--row-->

</div> <!--container-->