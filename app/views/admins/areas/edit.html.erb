<!-- エリア編集ページ -->
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center pt-5">What would you like to edit <i class="fas fa-question"></i></h2>

      <%= form_with model: @area, url: admins_area_path(@area), method: :patch, local: true do |f| %>
      <form>
        <!-- エリア名 -->
        <div class="row pt-5 mb-3">
          <%= f.label :area, "AREA", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :area, autofocus: true, autocomplete: "area", class: "form-control w-75" %>
          </div>
        </div>
        <!-- 変更保存ボタン -->
        <div class="text-center mt-5">
          <%= f.submit "UPDATE", class: "btn btn-outline-success w-25" %>
        </div>
      </form>
      <% end %>

    </div>
  </div>
</div>