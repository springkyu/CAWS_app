<!-- 管理者閲覧用 ユーザーの投稿一覧 -->
<div class="card-list-container py-5">
  <div class="row">
    <div class="col">
      <!-- ページタイトル -->
      <h1 class="text-center pt-5">POST LIST <i class="fas fa-icons"></i></h1>
      <!-- ソート（新着・おすすめ度高い） -->
      <h6 class="text-center pt-2 mb-5">Need to sort ? <i class="fas fa-arrow-right"></i>
        <%= link_to "NEW ARRIVAL", admins_posts_path(sort: 'created_at DESC'), class:"text-secondary" %> | <%= link_to "RECOMMEND", admins_posts_path(sort: 'rate DESC'), class:"text-secondary" %>
      </h6>

      <!-- 投稿の一覧を表示 -->
      <% @posts.each do |post| %>
      <div class="card w-50 mx-auto mt-4 mb-5 shadow-lg border-info p-2 text-center" style="background: #cbd0d3;">
        <!--エリア名（投稿のヘッダー）-->
        <div class="card-header text-muted mt-1 mb-3" style="background: #a2c2e6;">
          <%= post.area.area %> エリア
        </div>

        <!-- 投稿写真（メイン） -->
        <div class="bd-placeholder-img card-img-top" width="100%" height="50">
        <%= link_to admins_post_path(post.id) do %>
          <%= image_tag post.image, class:"card-img-top"; %>
        <% end %>
        </div>

        <div class="card-body">
        　<!-- 投稿のタイトル＝カフェの名前 -->
          <h4 class="card-title">
             <%= link_to admins_post_path(post.id), class:"text-secondary" do %>
                <i class="fas fa-coffee"> <%= post.shop_name %> </i>
              <% end %>
          </h4>
          <!-- いいね数 -->
          <div class="card-text text-right">
            <i class="fas fa-heart" style="color: #a73836; font-size: 20px;"> <%= post.likes.count %> </i>
          </div>
          <!-- コメント数 -->
          <div class="card-text text-right" style="color: #001e43; font-size: 20px;">
            COMMENTS： <%= post.comments.count %>
          </div>
          <div class="card-text">
          <!-- 投稿ユーザーのプロフィール画像 -->
            <% if post.user.profile_image.attached? %>
              <%= image_tag post.user.profile_image.variant(resize:'100x100'), class:"mt-3 rounded-circle"; %>
            <% else %> <!-- （ない場合はデフォルトイメージ表示） -->
              <%= image_tag 'no_image.jpg', size: '100x100', class:"mt-3 rounded-circle"; %>
            <% end %>
            <!--投稿ユーザーのニックネーム-->
            <p>by. <%= post.user.name %></p>
          </div>
        </div>

　　　　<!--投稿日（投稿のフッター）-->
        <div class="card-footer text-muted" style="background: #a2c2e6;">
          <i class="fas fa-calendar-day"> <%= post.created_at.strftime("%Y/%m/%d %H:%M") %> </i>
        </div>
      </div>
      <% end %>

    </div> <!--col-->
  </div> <!--row-->
  <!--ページネーション-->
  <!--<div class="pagination justify-content-center"><%#= paginate @posts %></div>-->
</div> <!--container-->