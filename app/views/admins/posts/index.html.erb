<div class="card-list-container py-5">
  <h2 class=""> POST LIST </h2>
  <!-- 投稿の一覧を表示 -->
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <!-- 投稿写真（メイン） -->
    <%= link_to admins_post_path(post.id) do %>
      <%= image_tag post.image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-3">
          <!-- 投稿者のプロフィール画像（ない場合はデフォルトイメージ表示） -->
          <% if post.user.profile_image.attached? %>
            <%= image_tag post.user.profile_image.variant(resize:'100x100'), class:"mt-3 rounded-circle"; %>
          <% else %>
            <%= image_tag 'no_image.jpg', size:'100×100', class:"mt-3 rounded-circle"; %>
          <% end %>
        </div>
        <div class="col-8">
          <table class="postlist table-borderless">
            <tr>
              <td class="card-title">
                <!-- 投稿のタイトル＝カフェの名前 -->
                <%= link_to admins_post_path(post.id), class:"text-secondary" do %>
                  <strong><i class="fas fa-coffee"><span> <%= post.shop_name %> </span></i></strong>
                <% end %>
              </td>
              <td><i class="fas fa-heart"><%= post.likes.count %></i></td>
            </tr>
            <tr>
              <!-- 投稿日 -->
              <td class="card-date"><i class="fas fa-calendar-day"><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></i></td>
              <td></td>
              <!-- エリア -->
              <td class="category"><%= post.area.area %> エリア </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <div class="pagination"><p><%= paginate @posts %></p></div>
</div>