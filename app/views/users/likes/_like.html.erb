<!--ログインユーザがすでにいいねしていたら（＝trueだったら）-->
<% if current_user.already_liked?(post) %>
  <%= link_to post_likes_path(post), method: :delete, remote: true do %>
    <i class="fas fa-heart" style="color: #a73836; font-size: 30px;"></i>
  <% end %>

<!--そうでなかったら（＝falseだったら）-->
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true do %>
    <i class="far fa-heart" style="color: #a73836; font-size: 30px;"></i>
  <% end %>
<% end %>

<!-- いいね数のカウント -->
<%= post.likes.count %>