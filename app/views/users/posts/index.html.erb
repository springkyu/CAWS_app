<div class="card-list-container py-5">
  <h2> POST ALL ~ //一覧// ~ </h2>
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.user.profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <h4 class="card-title">
            <%= link_to post_path(post.id), class:"test-secondary" do %>
              <strong><i class="fas fa-coffee"></i><span> <%= post.shop_name %></span></strong>
            <% end %>
          </h4>
          <p class="card-date"><i class="fas fa-calendar-day"></i><%= post.created_at %>  |  </p>
          <span class="category"><%= post.area.area %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <div class="pagination"><p><%= paginate @posts %></p></div>
</div>