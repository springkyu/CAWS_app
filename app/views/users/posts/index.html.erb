<!-- 全ユーザーの投稿一覧 -->
<div class="card-list-container py-5">
  <div class="row">
    <div class="col">
      <!-- ページタイトル -->
      <h1 class="text-center pt-5">POST LIST <i class="fas fa-icons"></i></h1>
      <!-- ソート（新着・おすすめ度高い） -->
      <h6 class="text-center pt-2 mb-5">Need to sort ? <i class="fas fa-arrow-right"></i>
        <%= link_to "NEW ARRIVAL", posts_path(sort: 'created_at DESC'), class:"text-secondary" %> | <%= link_to "RECOMMEND", posts_path(sort: 'rate DESC'), class:"text-secondary" %>
      </h6>

      <!-- 投稿の一覧を表示 -->
      <% @posts.each do |post| %>
      <div class="card w-50 mx-auto mt-4 shadow-lg border-warning p-2 text-center">
        <!--エリア名（投稿のヘッダー）-->
        <div class="card-header">
          <%= post.area.area %> エリア
        </div>

        <!-- 投稿写真（メイン） -->
        <div class="bd-placeholder-img card-img-top" width="100%" height="50">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.image, class:"card-img-top"; %>
        <% end %>
        </div>
  
        <div class="card-body">
        　<!-- 投稿のタイトル＝カフェの名前 -->
          <h4 class="card-title">
             <%= link_to post_path(post.id), class:"text-secondary" do %>
                <i class="fas fa-coffee"> <%= post.shop_name %> </i>
              <% end %>
          </h4>
          <!-- いいねボタン（非同期通信） -->
          <div class="card-subtitle text-right">
            <div id="likes_buttons_<%= post.id %>">
              <%= render partial: 'users/likes/like', locals: {post: post} %>
            </div>
          </div>
          <div class="card-text">
          <!-- 投稿ユーザのプロフィール画像 -->
            <% if post.user.profile_image.attached? %>
              <%= image_tag post.user.profile_image.variant(resize:'100x100'), class:"mt-3 rounded-circle"; %>
            <% else %> <!-- （ない場合はデフォルトイメージ表示） -->
              <%= image_tag 'no_image.jpg', size:'100×100' %>
            <% end %>
            <!--投稿ユーザのニックネーム-->
            <p>by. <%= post.user.name %></p>
          </div>
        </div>

　　　　<!--投稿日（投稿のヘッダー）-->
        <div class="card-footer text-muted">
          <i class="fas fa-calendar-day"> <%= post.created_at.strftime("%Y/%m/%d %H:%M") %> </i>
        </div>
      </div>
      <% end %>

    </div>
    <!--<div class="pagination"><%#= paginate @posts_page %></div>-->
  </div>
</div>