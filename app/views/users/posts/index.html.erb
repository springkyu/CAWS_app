<div class="card-list-container py-5">
  <h2> POST ALL ~ //一覧// ~ </h2>
  <!-- 投稿の一覧を表示 -->
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg border-secondary p-2 text-center">
    <!-- 投稿写真（メイン） -->
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.image, class:"card-img-top"; %>
    <% end %>

    <div class="card-body">
      <div class="card-text">
        <table class="postlist table-borderless">
          <tr>
            <td> <!-- 投稿者のプロフィール画像（ない場合はデフォルトイメージ表示） -->
              <% if post.user.profile_image.attached? %>
                <%= image_tag post.user.profile_image.variant(resize:'100x100'), class:"mt-3 rounded-circle"; %>
              <% else %>
                <%= image_tag 'no_image.jpg', size:'100×100', class:"mt-3 rounded-circle"; %>
              <% end %>
              <p><%= post.user.name %></p>
            </td>
            <td></td>
            <th><!-- 投稿のタイトル＝カフェの名前 -->
              <%= link_to post_path(post.id), class:"text-secondary" do %>
                <strong><i class="fas fa-coffee"></i><span> <%= post.shop_name %></span></strong>
              <% end %>
              <p><i class="fas fa-calendar-day"></i><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></p>
            </th>
            <th></th>
            <td>
              <!--<%# if current_user.already_likeed?(post) %>-->
              <!--  <%#= link_to post_likes_path(post), method: :delete do %>-->
              <!--    <i class="fas fa-heart"></i>-->
              <!--  <%# end %>-->
              <!--<%# else %>-->
              <!--  <%#= link_to post_likes_path(post), method: :post do %>-->
              <!--    <i class="far fa-heart"></i>-->
              <!--  <%# end %>-->
              <!--<%# end %>-->
              <!--<%#= post.likes.count %>-->
                <!-- いいねは非同期通信 -->
                <div id="likes_buttons_<%= post.id %>">
                  <%= render partial: 'users/likes/like', locals: {post: post} %>
                </div>
              <p><%= post.area.area %> エリア </p>
            </td>
        </table>
      </div>
    </div>
  </div>
  <% end %>
  <div class="pagination"><p><%= paginate @posts %></p></div>
</div>