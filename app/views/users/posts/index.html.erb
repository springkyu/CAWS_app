<div class="card-list-container py-5">
  <h2> POST ALL ~ //一覧// ~ </h2>
  <!-- 投稿の一覧を表示 -->
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <!-- 投稿写真（メイン） -->
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <!-- 投稿者のプロフィール画像（ない場合はデフォルトイメージ表示） -->
          <%= image_tag post.user.profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <table class="postlist table-borderless">
            <tr>
              <td class="card-title">
                <!-- 投稿のタイトル＝カフェの名前 -->
                <%= link_to post_path(post.id), class:"text-secondary" do %>
                  <strong><i class="fas fa-coffee"></i><span> <%= post.shop_name %></span></strong>
                <% end %>
              </td>
              <td>
                <% if current_user.already_likeed?(@post) %>
                  <%= link_to post_likes_path(@post), method: :delete do %>
                  <i class="fas fa-heart"></i>
                  <% end %>
                <% else %>
                  <%= link_to post_likes_path(@post), method: :post do %>
                  <i class="far fa-heart"></i>
                  <% end %>
                <% end %>
                <%= @post.likes.count %>
                <!-- いいねは非同期通信 -->
                <!--<div id="likes_buttons_<#%= post.id %>">-->
                <!--  <%#= render partial: 'likes/like', locals: {post: post} %>-->
                <!--</div>-->
              </td>
            </tr>
            <tr>
              <!-- 投稿日 -->
              <td class="card-date"><i class="fas fa-calendar-day"></i><%= post.created_at %>  |  </td>
              <td class="category"><%= post.area.area %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <div class="pagination"><p><%= paginate @posts %></p></div>
</div>