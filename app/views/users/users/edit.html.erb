<div class="container">
  <div class="row">
    <h3 class=""> EDIT MYPAGE ~// マイページ編集 //~ </h3>
  </div>
  <div class="row">
    <%= form_with model: @user, url: users_path, method: :patch, local: true do |f| %>
    <table class="useredit table-borderless table-hover">
      <tr>
        <th>Profile Image</th>
        <td><%= f.file_field :profile_image %></td>
      </tr>
      <tr>
        <th>Nickname</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>E-Mail</th>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <th></th>
        <td><%= f.submit "UPDATE", class: "btn btn-outline-success" %></td>
      </tr>
      <tr>
        <th></th>
        <td><%= link_to "WITHDRAW(退会)", users_unsubscribe_path, class: "btn btn-outline-danger" %></td>
      </tr>
    </table> 
    <% end %>
  </div>
</div>