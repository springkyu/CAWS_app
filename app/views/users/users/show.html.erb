<div class="container">
  <div class="row">
    <h3 class=""> MY PAGE ~// マイページ //~ </h3>
  </div>
  <div class="row">
    <h4>INFO.</h4>
    <%= link_to "EDIT", edit_users_path, class: "btn btn-outline-success" %>
    <table class="table table-bordered table-hover">
      <tr>
        <th>Profile Image</th>
        <td>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image.variant(resize:'100x100') %>
          <% else %>
            <%= image_tag 'no_image.jpg', size:'100x100' %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Nickname</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>E-Mail</th>
        <td><%= @user.email %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <!--ユーザの投稿一覧-->
    <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
    <!-- 投稿写真（メイン） -->
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <!-- 投稿者のプロフィール画像（ない場合はデフォルトイメージ表示） -->
          <% if post.user.profile_image.attached? %>
            <%= image_tag post.user.profile_image.variant(resize:'100x100'), class:"mt-3 rounded-circle"; %>
          <% else %>
            <%= image_tag 'no_image.jpg', size:'100×100', class:"mt-3 rounded-circle"; %>
          <% end %>
        </div>
        <div class="col-10">
          <table class="postlist table-borderless">
            <tr>
              <td class="card-title">
                <!-- 投稿のタイトル＝カフェの名前 -->
                <%= link_to post_path(post.id), class:"text-secondary" do %>
                  <strong><i class="fas fa-coffee"></i><span> <%= post.shop_name %></span></strong>
                <% end %>
              </td>
              <td>
                <% if current_user.already_liked?(post) %>
                  <%= link_to post_likes_path(post), method: :delete do %>
                  <i class="fas fa-heart"></i>
                  <% end %>
                <% else %>
                  <%= link_to post_likes_path(post), method: :post do %>
                  <i class="far fa-heart"></i>
                  <% end %>
                <% end %>
                <%= post.likes.count %>
                <!-- いいねは非同期通信 -->
                <!--<div id="likes_buttons_<#%= post.id %>">-->
                <!--  <%#= render partial: 'likes/like', locals: {post: post} %>-->
                <!--</div>-->
              </td>
            </tr>
            <tr>
              <!-- 投稿日 -->
              <td class="card-date"><i class="fas fa-calendar-day"></i><%= post.created_at.strftime("%Y/%m/%d %H:%M") %>  |  </td>
              <td class="category"> <%= post.area.area %> エリア</td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <div class="pagination"><p><%= paginate @posts %></p></div>
  </div>
</div>