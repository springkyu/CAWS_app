<div class="container">
  <div class="row">
    <h3 class=""> MY PAGE ~// マイページ //~ </h3>
  </div>
  <div class="row">
    <h4>INFO.</h4>
    <%= link_to "EDIT", edit_users_path, class: "btn btn-outline-success" %>
    <table class="table table-bordered table-hover">
      <tr>
        <th>Profile Image</th>
        <td>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image.variant(resize:'100x100') %>
          <% else %>
            <%= image_tag 'no_image.jpg' %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Nickname</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>E-Mail</th>
        <td><%= @user.email %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <!--ユーザの投稿一覧-->
  </div>
</div>