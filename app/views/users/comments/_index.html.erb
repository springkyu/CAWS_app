<div class="mt-5 mb-4">
  <strong>COMMENT ALL <i class="fas fa-arrow-down faa-float animated"></i></strong>
</div>
<div class="scroll">
<table class="table table-hover mb-3">
  <thead class="thead-dark">
    <tr>
      <th scope="col">USER NAME</th>
      <th scope="col">COMMENT</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <!-- 投稿に対してのコメントを一覧で表示する -->
    <% post.comments.each do |comment| %>
      <% comment_user = comment.user %>
      <tr>
        <td><%= comment.user.name %></td>
        <td><%= comment.comment %></td>
        <!-- ログインユーザがコメントしたユーザなら削除ボタン表示 -->
        <% if comment.user == current_user %>
        <td>
          <%= link_to "DESTROY", post_comment_path(comment.post, comment), method: :delete, data: { confirm: '本当に消してもよろしいですか？' }, class: "btn btn-outline-danger", remote: true %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>
</div>

<script>
const $scrollAuto = $('.scroll');

$scrollAuto.animate({scrollTop: ($scrollAuto[0].scrollHeight + 350)}, 'test')

</script>